# Build stage
FROM node:18-alpine AS build-stage
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN {{build_command}}

# Production stage
FROM nginx:stable-alpine AS production-stage
COPY --from=build-stage /app/{{output_dir}} /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
